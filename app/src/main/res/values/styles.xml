<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="AppTheme">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="Subheader" parent="AppTheme">
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Body" parent="AppTheme">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>